<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/header.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
    <div class="blog content">
        <h2>All Blogs</h2>
        <% if(blogs.length> 0) { %>
            <% blogs.forEach((blog)=> { %>
                <h2 class="title">
                    <%= blog.title %>
                </h2>
                <p class="snippet">
                    <%= blog.snippet %>
                </p>
            <% }) %>
        <% } else { %>
            <h2>There is no blogs to show.</h2>
        <% } %>
    </div>
    <%- include('./partials/footer.ejs') %>
</body>
</html>